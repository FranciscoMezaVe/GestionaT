{
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
        "MinimumLevel": {
            "Default": "Debug",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "Logs/logDev-.txt",
                    "rollingInterval": "Day",
                    "rollOnFileSizeLimit": true,
                    "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} (App: {Application}, Env: {Environment}, Machine: {MachineName}, PID: {ProcessId}, TID: {ThreadId}){NewLine}{Exception}"
                }
            }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
        "Properties": {
            "Application": "GestionaT",
            "Environment": "Development"
        }
    },
    "AllowedHosts": "*"
}
